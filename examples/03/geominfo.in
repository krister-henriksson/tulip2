


# Cubic csystem:      C11, C12, C44
# Hexagonal csystem:  C11, C12, C13, C33, C44
# Orthogonal csystem: C11, C12, C13, C22, C23, C33, C44, C55, C66


LAT

name     = dimer
file     = in/dimer.lat
elements = W H

r0 = 1.5          # Desired bond distance in dimer
w_r0 = 0.0001

Ec       = -0.123
  w_Ec     = 0.0068

Fmax     = 0.0

# The dimer sits in an open box where pressure control should *not* be
# applied, hence 'Pmax = ...' should not be used.
# Pmax = 0.0

displ_max = 0.0

option: no_heating


